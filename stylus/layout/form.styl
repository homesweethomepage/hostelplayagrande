#reservation
	
	form
		border-color $orange
		
		legend
			color $blue
			text-transform uppercase
			font-weight 700
			border-bottom-color $orange
			
		input
		select
			color #999
			
		.inputFile
			position relative
			width 100%
			float left
			height 34px
			overflow hidden
			border-top-left-radius 0
			border-bottom-left-radius 0
			
			input
				text-align left
				position absolute
				top 0
				left 0
				width 100%
				height 100%
				cursor pointer
			
				&.input-file
					top -34px
					height 68px
					opacity 0
					z-index 4
					
				&.input-aux
					background-color transparent
					border-top-left-radius 0
					border-bottom-left-radius 0
					
			&:hover
			&:focus
				border-color $orange

#contact_form
	margin-top 15%
#success_message
	display none