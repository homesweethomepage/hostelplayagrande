#galery
	background-color $white
	padding 100px 0

	h1
		color $blue

	.box-hostel-titulo
		//overflow hidden
		margin-bottom 10px
		//height 60px

		.box-titulo
			width 100%
			height 60px
			background-color $light-blue
			border 1px solid $medium-blue
			cursor pointer
			transition all 0.3s

			h3
				color $white
				text-align center
				line-height 60px
				margin 0
				padding 0 20px
				font-weight 700
				text-transform uppercase

				i
					float right
					line-height 60px

			&:hover
			&:focus
				background-color $white

				h3
					color $orange

		.box-descripcion
			background-color $white
			overflow hidden
			width 100%
			//border 1px solid $medium-blue
			//border-top none
			padding 0px 10px 0 // padding 10px 10px 0
			max-height 0px // max-height 9999px

			p
				text-align justify
				color $grey-sections
				
		&.descripcion-activa
			
			.box-titulo
				cursor default

				&:hover
				&:focus
					background-color $light-blue

					h3
						color $white
			
			.box-descripcion
				border 1px solid $medium-blue
				border-top none
				padding 10px 10px 0
				max-height 9999px

	.box-img
		box-shadow 0 0 5px $orange !important